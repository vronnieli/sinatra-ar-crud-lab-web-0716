<%= @post.name %>
<%= @post.content %>

<form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>New Name: <input type="text" name="name" placeholder="blog post name"></p>
    <p>New Content: <input type="text" name="content" placeholder="blog content"></p>
    <p><input type="submit" value="submit"></p>
</form>
